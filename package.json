{
  "name": "second-brain",
  "type": "module",
  "version": "0.1.0",
  "description": "Personal knowledge management system with Claude Code integration",
  "repository": {
    "type": "git",
    "url": "https://github.com/Patrity/second-brain.git"
  },
  "bin": {
    "second-brain": "./dist/cli/index.js"
  },
  "files": [
    "dist/cli",
    "app",
    "shared",
    "server",
    "Claude",
    "nuxt.config.ts",
    "tsconfig.json",
    "drizzle.config.ts",
    ".env.example"
  ],
  "scripts": {
    "cli:build": "pnpm --filter second-brain-cli build",
    "cli:dev": "pnpm --filter second-brain-cli dev",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "prepare": "nuxt prepare",
    "lint": "eslint .",
    "typecheck": "nuxt typecheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:up": "docker compose --profile local up -d db",
    "db:down": "docker compose --profile local down",
    "docker:up": "./scripts/docker-up.sh -d",
    "docker:down": "docker compose --profile local down",
    "auth:create-admin": "tsx scripts/create-admin.ts",
    "auth:reset-pw": "tsx scripts/reset-password.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.23",
    "@anthropic-ai/sdk": "^0.72.1",
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/lang-vue": "^0.1.3",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language": "^6.12.1",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.11",
    "@iconify-json/lucide": "^1.2.82",
    "@iconify-json/simple-icons": "^1.2.63",
    "@nuxt/ui": "^4.3.0",
    "@nuxtjs/mdc": "^0.20.0",
    "@unovis/ts": "^1.6.2",
    "@unovis/vue": "^1.6.2",
    "@vueuse/core": "^14.1.0",
    "@vueuse/integrations": "^14.1.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "better-auth": "^1.4.17",
    "chokidar": "^5.0.0",
    "codemirror": "^6.0.2",
    "cron": "^4.4.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "gray-matter": "^4.0.3",
    "node-pty": "^1.1.0",
    "nuxt": "^4.2.2",
    "postgres": "^3.4.8",
    "shiki": "^3.21.0",
    "sortablejs": "^1.15.6",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@types/node": "^25.0.8",
    "@types/sortablejs": "^1.15.9",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.1"
  },
  "packageManager": "pnpm@10.26.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "node-pty"
    ]
  }
}
